{
    "name": "argon",
    "productName": "argon",
    "version": "0.1.1",
    "description": "electron basierter schulerzbistum.de client",
    "main": "dist/main.js",
    "repository": "https://github.com/chaostheorie/argon",
    "scripts": {
        "start": "tsc && electron-forge start",
        "clean": "rm -rf out dist",
        "clean-start": "rm -rf out dist && tsc && electron-forge start",
        "package": "electron-forge package",
        "make": "tsc && electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts .",
        "rebuild-linux": "./node_modules/.bin/electron-rebuild",
        "rebuild-windows": ".\\node_modules\\.bin\\electron-rebuild.cmd"
    },
    "keywords": [],
    "author": {
        "name": "Cobalt",
        "email": "Chaosthe0rie@protonmail.com"
    },
    "license": "MIT",
    "config": {
        "icon": "src/images/favicon",
        "forge": {
            "packagerConfig": {
                "icon": "src/images/favicon"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "argon"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "productName": "argon",
                    "section": "education",
                    "icon": "src/images/favicon.png",
                    "maintainer": "Cobalt <https://sinclair.gq>",
                    "priority": "optional",
                    "config": {
                        "categories": [
                            "Office",
                            "Utility",
                            "Education"
                        ],
                        "description": "electron basierter schulerzbistum.de client",
                        "homepage": "https://github.com/Chaostheorie/argon"
                    }
                }
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.50",
        "@electron-forge/maker-deb": "^6.0.0-beta.50",
        "@electron-forge/maker-rpm": "^6.0.0-beta.50",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
        "@electron-forge/maker-zip": "^6.0.0-beta.50",
        "@types/node": "^12.12.34",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "electron": "8.2.4",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.20.2",
        "tslint": "^6.1.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "electron-forge-maker-appimage": "^22.6.0",
        "electron-is-dev": "^1.2.0",
        "electron-squirrel-startup": "^1.0.0",
        "jquery": ">=3.5.0",
        "keytar": "^5.4.0",
        "moment": "^2.25.3",
        "node": "^14.0.0",
        "node-gyp": "^6.1.0",
        "nopt": "^4.0.3",
        "npm": "^6.14.5",
        "sanitize-html": "^1.23.0",
        "uuid-by-string": "^3.0.2"
    }
}
