{
  "name": "argon",
  "productName": "argon",
  "version": "0.1.1",
  "description": "electron basierter schulerzbistum.de client",
  "main": "dist/main.js",
  "repository": "https://github.com/chaostheorie/argon",
  "scripts": {
    "start": "tsc && electron-forge start",
    "clean": "rm -rf out dist",
    "clean-start": "rm -rf out dist && tsc && electron-forge start",
    "package": "electron-forge package",
    "make": "tsc && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Cobalt",
    "email": "Chaosthe0rie@protonmail.com"
  },
  "license": "MIT",
  "config": {
    "icon": "src/images/favicon",
    "forge": {
      "packagerConfig": {
        "icon": "src/images/favicon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "argon"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "productName": "argon",
          "section": "education",
          "icon": "src/images/favicon.png",
          "maintainer": "Cobalt <https://sinclair.gq>",
          "priority": "optional",
          "config": {
            "categories": [
              "Office",
              "Utility",
              "Education"
            ],
            "description": "electron basierter schulerzbistum.de client",
            "homepage": "https://github.com/Chaostheorie/argon"
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "@types/node": "^12.12.34",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "axios": "^0.19.2",
    "electron": "8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "jrpc2": "^1.0.5",
    "jsonrpc-ts": "^0.2.0",
    "tcs": "^10.0.0",
    "tsc": "^1.20150623.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.4.1",
    "keytar": "^5.4.0",
    "sanitize-html": "^1.23.0"
  }
}
